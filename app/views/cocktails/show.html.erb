<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag( @cocktail.photo.attached? ? @cocktail.photo.key : "https://source.unsplash.com/featured/?cocktail)", crop: :thumb, gravity: :face, width: 300) %>
        <h3>Dose</h3>
        <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?" } do %>
            <i class="fas fa-meteor"></i></p>
          <% end %>
        <% end %>
        <p><%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail)  %></p>

    </div>
  </div>
</div>
