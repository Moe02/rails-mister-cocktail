<div class="container">
  <div class="row">
    <div class="col">
      <h1>Cocktail!</h1>
        <p><%= @cocktail.name %></p>
        <h3>Dose</h3>
        <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?" } do %>
            <i class="fas fa-meteor"></i></p>
          <% end %>
        <% end %>
        <p><%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail)  %></p>

    </div>
  </div>
</div>

