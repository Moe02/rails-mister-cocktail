<div class="container">
  <div class="row">
    <div class="col">
      <h1>Find your favorite cocktail</h1>
        <div class="cards">
          <% @cocktails.each do |cocktail| %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?cocktail)">
              <p><%= link_to cocktail.name, cocktail_path(cocktail)%></p>
            </div>
          <% end %>
        </div>
      <p><%= link_to "Add new cocktail", new_cocktail_path %></p>
    </div>
  </div>
</div>

